{
    "compilerOptions": {
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "suppressImplicitAnyIndexErrors": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noUnusedParameters": false,
        "importHelpers": true,
        "noEmitHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "target": "es2015",
        "jsx": "react",
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    }
}